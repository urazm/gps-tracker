<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Location">

        <ListPreference
            android:defaultValue="3000"
            android:entries="@array/loc_time_update_names"
            android:entryValues="@array/loc_time_update_values"
            android:key="update_time_key"
            android:title="@string/update_time"
            app:icon="@drawable/ic_time"
            app:summary="@string/update_time_hint" />

        <ListPreference
            android:defaultValue="#1167B9"
            android:entries="@array/color_names"
            android:entryValues="@array/color_values"
            android:key="color_key"
            android:title="@string/location_color"
            app:icon="@drawable/ic_circle"
            app:summary="@string/location_color_hint" />

    </PreferenceCategory>
</PreferenceScreen>